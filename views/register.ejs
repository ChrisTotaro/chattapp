<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="css/global.css">
        <link rel="stylesheet" href="css/register.css">
    </head>
    <body>
        <div class="form-container">
            <form id="form" action="/register" method="POST">
                <h1>Sign Up</h1>
                <% if (messages.err_msg) { %>
                    <div class="alert alert-danger">
                        <%= messages.err_msg %>
                    </div>
                <% } %>
                <div class="field-container">
                    <div class="row-fields">
                        <div class="field">
                            <label for="fname">First Name</label>
                            <input type="text" id="fname" name="fname" aria-autocomplete="none" required>
                        </div>
                        <div class="field right">
                            <label for="lname">Last Name</label>
                            <input type="text" id="lname" name="lname" aria-autocomplete="none" required>
                        </div>
                    </div>
                    <div class="field">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" aria-autocomplete="none" minlength="3" maxlength="12" required>
                    </div>
                    <div class="field">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" aria-autocomplete="none" required>
                    </div>
                    <div class="field">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" aria-autocomplete="none" minlength="5" maxlength="30" required>
                    </div>
                </div>
                <button type="submit">Sign Up</button>
                <div class="register">
                    Already have an account? <a href="/login">Log in</a>
                </div>
            </form>
        </div>
    </body>
</html>